@model BPropertyManagement.Models.ViewModels.DetailsProperty
@{
    ViewBag.Title = "View";
}

<h2 style="border: 2px solid Black;  text-align: center; padding:15px; font-weight: bold;">Property Details</h2>
<div style="padding:20px 0;">
    <a  href="/Property/List">Go back to list</a> <a style="color:#ab2020; margin-left:10px;" href="/Property/DeleteConfirm/@Model.SelectedProperty.PropertyId">Delete</a>
</div>

    <span style="float: left; font-size: 25px; font-weight:bold; ">@Model.SelectedProperty.PropertyName</span>

   
    <span style="float: right; font-weight:bold">ListPrice: $@Model.SelectedProperty.ListPrice</span>
<br/>
<br />
<div>
      <div>Type: @Model.SelectedProperty.Type</div>
      <div>Style: @Model.SelectedProperty.Style</div>
      <div>Size: @Model.SelectedProperty.Size sqft</div>
      <div>Realtor: @Model.SelectedProperty.RealtorName</div>
</div>

